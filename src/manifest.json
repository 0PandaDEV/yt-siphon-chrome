{
  "manifest_version": 3,
  "name": "YT Siphon",
  "version": "1.0.6",
  "description": "Redirect YouTube URLs to alternative frontends",
  "icons": {
    "512": "icons/logo.png"
  },
  "action": {
    "default_icon": {
      "512": "icons/logo.png"
    }
  },
  "background": {
    "service_worker": "main/background.js"
  },
  "options_ui": {
    "page": "main/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "commands": {
    "open_alt_frontend": {
      "suggested_key": {
        "default": "Alt+J"
      },
      "description": "Open alternative frontend"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "main/content.js"
      ]
    }
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ]
}